#include <stdio.h>

struct Student {
    int no;
    char name[20];
    int age;
    struct Student* pair;
};

void introduce(struct Student* s) {
    printf("안녕하세요 저는 %d번 %d살 %s이고요, 저의 짝궁은 %d번 %d살 %s입니다.\n",
        s->no, s->age, s->name, s->pair->no, s->pair->age, s->pair->name);
}

int main(void) {
    struct Student s1 = { 1, "홍길동", 20, NULL };
    struct Student s2 = { 2, "홍길순", 21, NULL };
    struct Student s3 = { 3, "황진이", 22, NULL };

    s1.pair = &s3;

    introduce(&s1);

    s1.pair = &s2;

    printf("\n--- 짝궁이 변경되었습니다. ---\n\n");

    introduce(&s1);

    return 0;
}
